<idc>
	<append xpath="/styles">
		<style type="button" name="icon32px_rollover">
			<style_entry name="width" value="32"/>
			<style_entry name="height" value="32"/>
			<style_entry name="foregroundlayer" value="true" />
			<style_entry name="hovercolor" value="[green]" />
		</style>
	</append>

	<append xpath="/styles/global">
		<style_entry name="idc_style_scrollbar_background" value="51,51,51" />
		<style_entry name="idc_style_scrollbar_background_hover" value="7,7,7" /> <!-- 7,7,7 -->
		<style_entry name="idc_style_scrollbar_handler" value="128,128,128" />
		<style_entry name="idc_style_scrollbar_handler_hover" value="255,255,255" />					
		
		<style_entry name="idc_style_slot_main_background" value="[black]" /> <!-- opacity,198 -->
		<style_entry name="idc_style_slot_frame_locked" value="175,30,25" />
		<style_entry name="idc_style_slot_frame_search" value="255,144,24,255" />
		
		<style_entry name="idc_style_item_durability_background" value="[darkGrey]" />
		
		<style_entry name="idc_style_slot_timer_color" value="[beige]" />
		<style_entry name="idc_style_slot_cancel_color" value="255,0,0,255" />
		
		<style_entry name="idc_style_element_labelcolor_1" value="255,255,255" />
		<style_entry name="idc_style_element_input_frame" value="255,255,255" />
		<style_entry name="idc_style_element_iconcolor_1" value="255,255,255" />
		<style_entry name="idc_style_element_iconcolor_disabled" value="64,64,64" />
		<style_entry name="idc_style_element_labelcolor_effect" value="20,20,20,230" />
	</append>
	
	<append xpath="/styles">
		<style name="idc_style_item_stack">
			<style_entry name="select_color" value="[beige]"/>
			<style_entry name="preidc_color" value="[limeGreen]"/>
			<style_entry name="final_pressed_color" value="[lightGrey]"/>
			<style_entry name="background_color" value="[mediumGrey]"/>
			<style_entry name="highlight_color" value="[hoverColor]"/>
			<style_entry name="holding_color" value="[white]"/>
			<style_entry name="lockedslot_color" value="[idc_style_slot_frame_locked]"/>
			<style_entry name="search_color" value="[idc_style_slot_frame_search]"/>
			<style_entry name="nomatch_iconcolor" value="[idc_style_element_iconcolor_disabled]"/>
			<!-- <style_entry name="width" value="75"/> -->
			<!-- <style_entry name="height" value="75"/> -->
			<style_entry name="hover_icon_grow" value="1.5"/>
			<style_entry name="on_press" value="true"/>
			<style_entry name="sound_volume" value="0.75"/>
			<style_entry name="pickup_sound" value="[pickup_click]"/>
			<style_entry name="place_sound" value="[place_click]"/>
		</style>
	</append>

	<append xpath="/styles">
		<style name="idc_style_label_normal" type="label">
			<style_entry name="font_size" value="22" />
			<style_entry name="color" value="[idc_style_element_labelcolor_1]" />
			<style_entry name="crispness" value="OnDesktop" />
			<style_entry name="effect" value="outline" />
			<style_entry name="effect_distance" value="1,1" />
			<style_entry name="effect_color" value="[idc_style_element_labelcolor_effect]" />
		</style>
	</append>
</idc>